{
  "compilerOptions": {
    "target": "ESNext", // 최신 버전의 자바스크립트 문법을 사용
    "module": "ESNext", // 모듈 시스템을 사용
    "outDir": "dist", // 컴파일된 파일을 dist 폴더에 저장
    "strict": true, // 엄격한 타입 검사를 사용
    "moduleDetection": "force", // ts가 각각의 파일을 모듈로 간주하도록 강제
  },
  "ts-node": {
    "esm": true, // ts-node를 사용할 때 esm 모듈 시스템을 사용
  },
  "include": ["src"] // src 폴더 내의 모든 파일을 포함
}